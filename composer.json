{
    "name": "flarum/flarum",
    "description": "Delightfully simple forum software.",
    "type": "project",
    "keywords": [
        "forum",
        "discussion"
    ],
    "homepage": "https://flarum.org/",
    "license": "MIT",
    "authors": [
        {
            "name": "Flarum",
            "email": "info@flarum.org",
            "homepage": "https://flarum.org/team"
        }
    ],
    "support": {
        "issues": "https://github.com/flarum/core/issues",
        "source": "https://github.com/flarum/flarum",
        "docs": "https://docs.flarum.org/"
    },
    "require": {
        "php": "~8.3.0",
        "flarum/approval": "*",
        "flarum/bbcode": "*",
        "flarum/core": "^1.8",
        "flarum/emoji": "*",
        "flarum/flags": "*",
        "flarum/lang-english": "*",
        "flarum/likes": "*",
        "flarum/lock": "*",
        "flarum/markdown": "*",
        "flarum/mentions": "*",
        "flarum/nicknames": "*",
        "flarum/pusher": "*",
        "flarum/statistics": "*",
        "flarum/sticky": "*",
        "flarum/subscriptions": "*",
        "flarum/suspend": "*",
        "flarum/tags": "*",
        "fof/analytics": "*",
        "fof/anti-spam": "*",
        "fof/ban-ips": "*",
        "fof/bbcode-details": "^1.1",
        "fof/bbcode-tabs": "*",
        "fof/best-answer": "*",
        "fof/custom-footer": "*",
        "fof/default-group": "*",
        "fof/default-user-preferences": "*",
        "fof/direct-links": "*",
        "fof/discussion-views": "*",
        "fof/disposable-emails": "*",
        "fof/doorman": "*",
        "fof/filter": "*",
        "fof/follow-tags": "*",
        "fof/formatting": "*",
        "fof/forum-statistics-widget": "*",
        "fof/gamification": "^1.6",
        "fof/geoip": "*",
        "fof/github-autolink": "*",
        "fof/github-sponsors": "*",
        "fof/html-errors": "^1.1",
        "fof/impersonate": "*",
        "fof/links": "^1.3",
        "fof/mason": "^1.2",
        "fof/merge-discussions": "*",
        "fof/moderator-notes": "*",
        "fof/oauth": "^1.7",
        "fof/pages": "^1.0",
        "fof/polls": "*",
        "fof/pretty-mail": "*",
        "fof/prevent-necrobumping": "^1.2",
        "fof/profile-image-crop": "*",
        "fof/reactions": "*",
        "fof/secure-https": "*",
        "fof/share-social": "^1.2",
        "fof/sitemap": "^2.2",
        "fof/socialprofile": "^1.2",
        "fof/split": "*",
        "fof/subscribed": "*",
        "fof/terms": "^1.4",
        "fof/upload": "*",
        "fof/user-bio": "*",
        "fof/user-directory": "*",
        "fof/webhooks": "^1.3",
        "league/flysystem-aws-s3-v3": "1.*",
        "v17development/flarum-seo": "^2.0"
    },
    "scripts": {
        "post-autoload-dump": [
            "Flarum\\Composer\\Installer::run"
        ],
        "post-install-cmd": [
            "@post-autoload-dump",
            "mkdir -p public/assets",
            "chmod -R 777 public/assets",
            "chmod -R 775 storage",
            "chmod 664 composer.json",
            "chmod 664 composer.lock"
        ],
        "post-update-cmd": [
            "@post-autoload-dump"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": false
        }
    },
    "prefer-stable": true,
    "minimum-stability": "stable"
}
