{
    "name": "fof/username-request",
    "description": "Allow users to request new usernames",
    "keywords": [
        "flarum",
        "Friends of Flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/FriendsOfFlarum/username-request/issues",
        "source": "https://github.com/FriendsOfFlarum/username-request",
        "forum": "https://discuss.flarum.org/d/20956"
    },
    "homepage": "https://friendsofflarum.org",
    "funding": [
        {
            "type": "website",
            "url": "https://opencollective.com/fof/donate"
        }
    ],
    "require": {
        "flarum/core": "^1.8.0"
    },
    "authors": [
        {
            "name": "FoF Team",
            "email": "team@friendsofflarum.org",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "FoF\\UserRequest\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "FoF Username Request",
            "category": "feature",
            "icon": {
                "name": "fas fa-user-edit",
                "backgroundColor": "#e74c3c",
                "color": "#fff"
            },
            "optional-dependencies": [
                "flarum/nicknames"
            ]
        },
        "flagrow": {
            "discuss": "https://discuss.flarum.org/d/20956"
        },
        "flarum-cli": {
            "modules": {
                "githubActions": true
            }
        }
    },
    "require-dev": {
        "flarum/nicknames": "^1.8",
        "flarum/phpstan": "*"
    },
    "scripts": {
        "analyse:phpstan": "phpstan analyse",
        "clear-cache:phpstan": "phpstan clear-result-cache"
    },
    "scripts-descriptions": {
        "analyse:phpstan": "Run static analysis"
    }
}
